select store.store_country as c0, time_by_day.the_year as c1, sum(sales_fact_1997.store_cost) as m0, count(sales_fact_1997.product_id) as m1, count(distinct sales_fact_1997.customer_id) as m2, sum((case when sales_fact_1997.promotion_id = 0 then 0 else sales_fact_1997.store_sales end)) as m3 from store as store, sales_fact_1997 as sales_fact_1997, time_by_day as time_by_day where sales_fact_1997.store_id = store.store_id and sales_fact_1997.time_id = time_by_day.time_id and time_by_day.the_year = 1997 group by store.store_country, time_by_day.the_year;
