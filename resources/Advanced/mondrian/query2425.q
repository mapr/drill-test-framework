select time_by_day.the_year as c0, sum(sales_fact_1997.store_cost) as m0, sum(sales_fact_1997.store_sales) as m1, count(sales_fact_1997.product_id) as m2, count(distinct sales_fact_1997.customer_id) as m3, sum((case when sales_fact_1997.promotion_id = 0 then 0 else sales_fact_1997.store_sales end)) as m4 from time_by_day as time_by_day, sales_fact_1997 as sales_fact_1997 where sales_fact_1997.time_id = time_by_day.time_id and time_by_day.the_year = 1997 group by time_by_day.the_year;
