#!/bin/bash

set -x

if [[ $# -ne 3 ]]
then
  echo upgradezk needs the cluster name, the number of pods to upgrade and a timeout
  exit 1
fi

cluster=$1
numberpods=$2
timeoutvalue=$3
echo upgradezk cluster $cluster number of pods $numberpods timeout $timeoutvalue

timeout $timeoutvalue kubectl exec -i admincli-0 -n $cluster -- /bin/bash -c 'edf upgrade zookeeper -n'
ret=$?
if [[ $ret -gt 0 ]]
then
  echo timeout edf upgrade zookeeper returned error $ret
  exit $ret
fi

interval=20
((end_time=${SECONDS}+120))
start_time=$SECONDS
ready="0"
echo "START SECONDS", $SECONDS
while ((${SECONDS} < ${end_time}))
do
  ret=`kubectl get pods -n $cluster | grep zk | grep Running | grep "1/1" | wc -l`
  if [ $ret -eq $numberpods ]
  then
    echo "All zookeeper pods are up and running"
    ready="1"
    break
  fi
  echo "All zookeeper pods are not yet available after " $(($SECONDS - $start_time)) " seconds"
  sleep ${interval}
done

