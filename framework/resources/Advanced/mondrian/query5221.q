select employee_closure.supervisor_id as c0, time_by_day.the_year as c1, sum(salary.salary_paid) as m0, count(salary.employee_id) as m1, count(distinct salary.employee_id) as m2 from employee_closure as employee_closure, salary as salary, time_by_day as time_by_day where salary.employee_id = employee_closure.employee_id and employee_closure.supervisor_id = 1 and salary.pay_date = time_by_day.the_date and time_by_day.the_year = 1997 group by employee_closure.supervisor_id, time_by_day.the_year;
