select count(distinct sales_fact_1997.customer_id) as m0 from time_by_day as time_by_day, sales_fact_1997 as sales_fact_1997, promotion as promotion where sales_fact_1997.time_id = time_by_day.time_id and ((time_by_day.quarter = 'Q1' and time_by_day.the_year = 1997) or (time_by_day.month_of_year = 7 and time_by_day.quarter = 'Q3' and time_by_day.the_year = 1997)) and sales_fact_1997.promotion_id = promotion.promotion_id and promotion.media_type in ('TV', 'Radio');
