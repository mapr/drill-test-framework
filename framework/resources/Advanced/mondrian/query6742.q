select time_by_day.the_year as c0, promotion.media_type as c1, count(distinct sales_fact_1997.customer_id) as m0 from time_by_day as time_by_day, sales_fact_1997 as sales_fact_1997, promotion as promotion where sales_fact_1997.time_id = time_by_day.time_id and time_by_day.the_year = 1997 and sales_fact_1997.promotion_id = promotion.promotion_id and promotion.media_type in ('Radio', 'TV') group by time_by_day.the_year, promotion.media_type;
