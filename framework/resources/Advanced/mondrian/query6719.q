select time_by_day.the_year as c0, product.product_name as c1, promotion.promotion_name as c2, sum(sales_fact_1997.unit_sales) as m0 from time_by_day as time_by_day, sales_fact_1997 as sales_fact_1997, product as product, promotion as promotion where sales_fact_1997.time_id = time_by_day.time_id and sales_fact_1997.product_id = product.product_id and product.product_name = 'Pearl Imported Beer' and sales_fact_1997.promotion_id = promotion.promotion_id group by time_by_day.the_year, product.product_name, promotion.promotion_name;
