select promotion.promotion_name as c0, customer.country as c1, sum(sales_fact_1997.unit_sales) as m0 from promotion as promotion, sales_fact_1997 as sales_fact_1997, customer as customer where sales_fact_1997.promotion_id = promotion.promotion_id and promotion.promotion_name = 'Big Promo' and sales_fact_1997.customer_id = customer.customer_id and customer.country = 'USA' group by promotion.promotion_name, customer.country;
