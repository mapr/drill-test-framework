{
    "testId": "cross-sources",
    "type": "group",
    "description": "Test drill queries involving data from different sources",
    "submit-type": "jdbc",
    "categories": [
        "functional"
    ],
    "dependencies" : ["hive", "hbase"],
    "matrices": [
        {
            "query-file": ".*.q",
            "schema": "dfs_test",
            "output-format": "tsv",
            "expected-file": ".*.e_tsv",
            "verification-type": [
                "in-memory"
            ]
        }
    ],
    "datasources" : [
       {
            "mode": "cp",
            "src": "Datasources/cross-sources",
            "dest": "cross-sources"
        },
        {
           "mode": "gen",
           "src": "Datasources/cross-sources/cross-sources.sh",
           "dest": ""
        }
    ]
}
